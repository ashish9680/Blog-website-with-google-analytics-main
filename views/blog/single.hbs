<div class="" data-aos="fade-up">
     <div class="parallax-container z-depth-3 hide-on-med-and-down" style="height: 80vh;">
          <div class="parallax"><img id="slide-image-1" src="{{post.postImage}}" class="materialboxed responsive-img"></div>
               <div class="parallax-caption" data-aos="fade-up">
                    <div style="margin-top: 30%;">
                         {{post.postTitle}}
                    </div>
               </div>
     </div>
</div>

<div data-aos="fade-up">
     <div class="hide-on-large-only">
          <img src="{{post.postImage}}" class="responsive-img" alt="">
            <div style="font-size: 20px;margin-top: 30px;" class="center" data-aos="fade-up">
          {{post.postTitle}}
     </div>
     </div>

</div>

<div data-aos="fade-up">
     <div class="center">
          <div class="short-title" style="margin-top: 50px;" data-aos="fade-up">
               {{post.shortDescription}} | {{post.createdAt}}
          </div>
     </div>
     <div class="row">
          <div class="col s12 l8 offset-l2">
          <p class="paragraph" style="margin-top:0px; margin-bottom: 50px; display: inline-block">
               {{post.mainDescription}}
          </p>
          </div>
     </div>
</div>

