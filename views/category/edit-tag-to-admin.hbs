<div class="form-container">
     <div class="heading">
          Make chanegs in {{categoryId.title}}
     </div>
    <div class="container">
          <div class="form-container">
               <div class="row">
                    <form action="/admin/edit-category/{{categoryId._id}}" class="col s12" method="post">
                         <div class="row">
                              <div class="input-field col s12 l8 offset-l2">
                                   <input id="title" value="{{categoryId.title}}" name="title" type="text" class="validate">
                                   <label for="title">Category title</label>
                              </div>
                         </div>
                         <div class="row">
                              <div class="input-field col s12 l8 offset-l2">
                                   <input id="description" value="{{categoryId.description}}" name="description" type="text" class="validate">
                                   <label for="description">Category description</label>
                              </div>
                         </div>
                         <div class="row">
                              <div class="input-field col s6 l4 offset-l2">
                                   <input id="title" disabled value="{{categoryId.createdAt}}" name="title" type="text" class="validate">
                                   <label for="title">Category created at</label>
                              </div>
                              <div class="input-field col s6 l4">
                                   <input id="title" disabled value="{{categoryId.updatedAt}}" name="title" type="text" class="validate">
                                   <label for="title">Category upadted last at</label>
                              </div>
                         </div>
                         <div class="row">
                              <div class="input-field">
                                   <button type="submit" class="btn black col s12 l8 offset-l2">
                                        Create new category
                                   </button>
                              </div>
                         </div>
                    </form>
               </div>
          </div>
    </div>
</div>